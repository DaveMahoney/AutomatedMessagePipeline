{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "type": "string",
      "metadata": {
        "description": "Unique name for the Function App and resources"
      }
    },
    "messageSendTimeUTC": {
      "type": "string",
      "defaultValue": "12:00",
      "metadata": {
        "description": "Daily send time in 24-hour UTC format (e.g., '13:00')"
      }
    },
    "sendGridApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Your SendGrid API key"
      }
    },
    "logoUrl": {
      "type": "string",
      "defaultValue": "https://yourdomain.com/logo.png",
      "metadata": {
        "description": "Logo URL for email header branding"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[toLower(concat(substring(replace([parameters('projectName')], '-', ''), 0, 20), utcNow('MMDD')))]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('projectName'), '-plan')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "properties": {
        "maximumElasticWorkerCount": 1,
        "perSiteScaling": false,
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[parameters('projectName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', parameters('projectName'), '-plan')]",
        "[concat('Microsoft.Storage/storageAccounts/', [toLower(concat(substring(replace([parameters('projectName')], '-', ''), 0, 16), utcNow('MMDD')))])]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('projectName'), '-plan'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', [toLower(concat(substring(replace([parameters('projectName')], '-', ''), 0, 16), utcNow('MMDD')))], ';AccountKey=FAKEKEY==;EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "python"
            },
            {
              "name": "SENDGRID_API_KEY",
              "value": "[parameters('sendGridApiKey')]"
            },
            {
              "name": "LOGO_URL",
              "value": "[parameters('logoUrl')]"
            },
            {
              "name": "SCHEDULE_TIME_UTC",
              "value": "[parameters('messageSendTimeUTC')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2022-03-01",
      "name": "[concat(parameters('projectName'), '/staging')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('projectName'))]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "SLOT_ENVIRONMENT",
              "value": "staging"
            }
          ]
        }
      }
    }
  ],
  "outputs": {}
}