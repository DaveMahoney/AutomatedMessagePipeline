{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "type": "string",
      "metadata": {
        "description": "Base name for all resources (e.g. 'myproject')"
      }
    },
    "messageSendTimeUTC": {
      "type": "string",
      "defaultValue": "12:00",
      "metadata": {
        "description": "Daily send time in 24-hour UTC format (e.g. '13:00')"
      }
    },
    "sendGridApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "Your SendGrid API key"
      }
    },
    "logoUrl": {
      "type": "string",
      "defaultValue": "https://yourdomain.com/logo.png",
      "metadata": {
        "description": "Logo URL for email branding"
      }
    }
  },
  "variables": {
    "storageAccountName": "[toLower(concat(substring(replace(parameters('projectName'), '-', ''), 0, 16), utcNow('MMdd')))]",
    "hostingPlanName": "[concat(parameters('projectName'), '-plan')]",
    "functionAppName": "[parameters('projectName')]",
    "location": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[variables('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {}
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[variables('location')]",
      "kind": "functionapp",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "properties": {
        "perSiteScaling": false,
        "reserved": true,
        "maximumElasticWorkerCount": 1
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[variables('functionAppName')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "kind": "functionapp,linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "Python|3.9",
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=REPLACEME==;EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "python"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "SENDGRID_API_KEY",
              "value": "[parameters('sendGridApiKey')]"
            },
            {
              "name": "LOGO_URL",
              "value": "[parameters('logoUrl')]"
            },
            {
              "name": "SCHEDULE_TIME_UTC",
              "value": "[parameters('messageSendTimeUTC')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2022-03-01",
      "name": "[concat(variables('functionAppName'), '/staging')]",
      "location": "[variables('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
      ],
      "properties": {
        "siteConfig": {
          "appSettings": [
            {
              "name": "SLOT_ENVIRONMENT",
              "value": "staging"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    }
  }
}
